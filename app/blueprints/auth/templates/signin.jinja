{% extends 'base.jinja' %}
{% block content %}
  <div class="width-100 my-4">
    <div class="mx-auto w-50 min-width-form">
      <h2 class="py-3">Sign In</h2>
      <form action="" method="POST" novalidate>
      {{ form.hidden_tag() }}
        <div>
          {{ form.email.label(class="form-label mt-3 mb-1") }}<br>
          {{ form.email(class="form-control") }}
          {% if form.email.errors %}
            <ul class="errors">
              {% for error in form.email.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
        <div>
          {{ form.password.label(class="form-label mt-3 mb-1") }}<br>
          {{ form.password(class="form-control") }}
          {% if form.password.errors %}
            <ul class="errors">
              {% for error in form.password.errors %}
                <li>{{ error }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        </div>
        <div class="d-flex justify-content-end">
          {{ form.submit(class="btn btn-mint px-4 my-4 fw-bold") }}
        </div>
      </form>
    </div>
  </div>
{% endblock content %}